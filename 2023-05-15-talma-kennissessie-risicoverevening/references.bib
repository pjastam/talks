@article{stamRisicovereveningGeenPanacee2015,
  title = {Risicoverevening Is Geen Panacee},
  author = {Stam, P.J.A. and Visser, J.S. and Goudriaan, R.},
  year = {2015},
  month = oct,
  journal = {Economisch Statistische Berichten},
  volume = {100},
  number = {4720},
  pages = {624--627},
  urldate = {2019-07-24},
  abstract = {In de praktijk van de risicoverevening ligt het accent op het wegnemen van prikkels tot risicoselectie voor groepen verzekerden. Het compenseren van verzekeraars voor deze groepen kan echter ten koste gaan van de doelmatigheid. Niettemin wordt een expliciete afweging tussen de prikkels tot risicoselectie en doelmatigheid in de huidige praktijk van de risicoverevening niet gemaakt. Opmerkelijk genoeg is dat zowel in de beleidsmatige praktijk als in de wetenschappelijke onderzoekspraktijk het geval. We bevelen aan om bij uitbreiding van de vereveningformule met groepen verzekerden niet louter de prikkels tot risicoselectie centraal te stellen, maar ook de invloed van de uitbreiding op de prikkels tot doelmatigheid in de afweging te betrekken. Een tweede aanbeveling is om de keuzes in de regelgeving - het Besluit Zorgverzekeringen en het Beoordelingskader Risicoverevening - scherper te formuleren. Op dit moment bestaat er bijvoorbeeld geen duidelijke definitie van het begrip gezondheid, waardoor het gevaar bestaat dat een groep verzekerden aan de vereveningsformule wordt toegevoegd terwijl de over- of ondercompensatie tot de verantwoordelijkheid van de verzekeraars behoort. Deze onduidelijkheid bemoeilijkt een degelijke inhoudelijke toetsing van de prikkels tot doelmatigheid. Als de prikkels tot risicoselectie expliciet worden afgewogen tegen de prikkels tot doelmatigheid, dan heeft dat mogelijk tot gevolg dat sommige groepen verzekerden met onder- en overcompensaties bewust niet in de vereveningsformule worden opgenomen. De risicoverevening is immers niet bedoeld als panacee voor de onder- en overcompensaties van alle groepen verzekerden. Voorkomen moet worden dat het middel erger wordt dan de kwaal.},
  copyright = {All rights reserved},
  keywords = {cv},
  annotation = {00000},
  file = {C\:\\Users\\pjast\\Zotero\\storage\\FFBBU6VS\\Stam2015ESB Risicoverevening is geen panacee.pdf}
}

